<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/azul</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="hintTextColor">@color/tf_color</item>
    </style>
    
    <style name="buttonMainStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">9dp</item>
        <item name="backgroundTint">@color/azul</item>
    </style>

    <style name="DividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:radius">16dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
        <item name="backgroundInsetStart">64dp</item>
        <item name="android:background">@drawable/rounded_divider</item>
    </style>

    <style name="buttonout" parent="Widget.MaterialComponents.Button.OutlinedButton">
     <item name="strokeWidth">0dp</item>
    </style>

    <style name="Base.Theme.Finance" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>
