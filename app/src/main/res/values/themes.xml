        <item name="colorSecondaryVariant">#eed0f2</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOutline">#eed0f2</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#061533</item>
        <item name="tabBackground">@color/fundoBarbie</item>
        <item name="colorSurface">#3a3e8c</item>
        <item name="iconTint">@color/black</item>
    </style>

