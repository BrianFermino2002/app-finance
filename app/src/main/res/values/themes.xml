        <item name="tabBackground">@color/azul_escuro</item>
        <item name="colorSurface">@color/azul_claro</item>
        <item name="iconTint">@color/white</item>
        <item name="borderlessButtonStyle">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

