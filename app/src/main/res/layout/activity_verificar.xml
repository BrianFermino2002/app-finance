<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="48dp"
    android:layout_height="match_parent"
    tools:context=".presentation.VerificarActivity">

    <ImageView
        android:id="@+id/iv_inicial"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:src="@drawable/money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/tv_pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Voce Ã© o Brian?"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/olaUsuario"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_inicial"
        app:layout_constraintStart_toStartOf="@id/iv_inicial"
        app:layout_constraintEnd_toEndOf="@id/iv_inicial"/>

    <Button
        android:id="@+id/bt_sim"
        style="@style/buttonMainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtbtnsim"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pergunta"
        android:layout_marginTop="64dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_nao"
        style="@style/buttonMainStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtbtnnao"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/bt_sim"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>